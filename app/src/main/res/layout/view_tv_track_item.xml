<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/tv_view_width"
    android:layout_height="@dimen/tv_view_height"
    android:gravity="center"
    android:background="@color/default_background">

    <TextView
        android:id="@+id/track_order_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="234-567-8910"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/track_order_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Primary Number"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textStyle="italic"/>

</LinearLayout>